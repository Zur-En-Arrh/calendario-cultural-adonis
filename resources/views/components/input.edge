<div class="input-group input-group-outline my-3">

  <label class="form-label" for={{name}}>{{label}}</label>
  <input type="{{`${type?type:'text'}`}}" id={{name}} name={{name}} class="form-control
   @if(flashMessages.has('errors.'+name))
    border-danger
   @endif
   "
  @if(value)
    value="{{value[`${name}`]}}"
  @endif

  />

  @!error({name})
</div>
